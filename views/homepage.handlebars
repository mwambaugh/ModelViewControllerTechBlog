
{{#if posts.length}}
  <section>
    <h2>Posts</h2>
    <ul>
      {{#each posts as |post|}}
        <li>
          <h3>{{post.title}}</h3>
          <p>{{post.content}}</p>
        </li>
      {{/each}}
    </ul>
  </section>
{{/if}}

<script src="/js/new-post.js"></script>

<script src="/js/login.js"></script>